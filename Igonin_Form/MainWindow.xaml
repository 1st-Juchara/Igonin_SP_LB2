<Window x:Class="Lab_1_Igonin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_1_Igonin"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400"
        Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <StackPanel>
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.RowSpan="2" Grid.Row="0" 
                               TextAlignment="Center"
                               FontSize="16"
                               Grid.Column="0" 
                               Text="{Binding SessionsCount}" d:Text="5"
                               Margin="10,5,10,5"
                               Background="#eee"/>
                    <Button Grid.Row="0" Grid.Column="1"
                            Margin="0,2,0,2" Content="+"
                            Click="Button_Count_Up"/>
                    <Button Grid.Row="1" Grid.Column="1"
                            Margin="0,2,0,2" Content="-"
                            Click="Button_Count_Down"/>
                </Grid>
                <Button Height="40" Width="80" Margin="0,10,0,0"
                        Content="Старт" Click="Button_Start_Click"/>
                <Button Height="40" Width="80" Margin="0,10,0,0"
                        Content="Стоп" Click="Button_Stop_Click"/>
                <Button Height="40" Width="80" Margin="0,10,0,0"
                        Click="Button_Send_Message">
                    <TextBlock TextAlignment="Center"> Отправить <LineBreak/> сообщение </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel Width="150" Margin="10,0,0,0">
                <ListView Height="150" 
                          BorderBrush="#777" Background="#EEE"
                          ItemsSource="{Binding Sessions}"
                          SelectedIndex="{Binding SelectedThreat}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border Margin="0,10,0,0" BorderBrush="Black" BorderThickness="1">
                    <TextBox Background="#eee" Margin="0,5,0,5"
                           Text="{Binding ThreatMessage}"
                           MaxWidth="140" Height="20"/>
                </Border>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
